$hahtoe + $waswe => null

$lonegyitin + $yapint => null
$lonegyitinsankhat + $yapint => null

$tachaungngin + $lonegyitin => null

// sanskrit
// we prefer double tap instead of alt combination
$sign_ri + $sign_ri => U1052
$sign_rii + $sign_rii => U1053
$sign_lri + $sign_lri => U1054
$sign_lrii + $sign_lrii => U1055

// two sinngle quote to double quote
U2018 + U2018 => U201C
U2019 + U2019 => U201D

