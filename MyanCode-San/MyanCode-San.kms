$sign_lrii = "ၙ"

// RE-ORDER
$nbsp + U1031 + U100B + U1039 + U100C => $3 + $4 + $5 + $2
$nbsp + U1031 + U100F + U1039 + U100D => $3 + $4 + $5 + $2

$nbsp + U1031 + $consU[*] => $consU[$3] + $2
U1031 + U1039 + $consU[*] => U1039 + $3 + U1031

$sdiaU = U103B + U103C + U103E + U103D 

U1031 + $sdiaU[*] => $2 + $1
U1031 + $sdiaU[*] + $sdiaU[*] => $2 + $3 + $1
U1031 + $sdiaU[*] + $sdiaU[*] + $sdiaU[*] => $2 + $3 + $4 + $1

//out-ka-myin <-> a-thet
//U103A + U1037 => $2 + $1

// double tap for kinzi
U103A + U103A => $kinzi

//kinzi reordering
$consU[*] + $kinzi => $kinzi + $1
$consU[*] + U103B + $kinzi => $kinzi + $1 + U103B
$consU[*] + U103C + $kinzi => $kinzi + $1 + U103C
$consU[*] + U1031 + $kinzi => $kinzi + $1 + U1031

// case like eain-dray (ဣန္နြေ)
$consU[*] + U103C + U1031 + U1039 + $consU[*] => $1 + U1039 + $5 + U103C + U1031

// prevent roung order input
